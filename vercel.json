{
  "framework": "nextjs",
  "buildCommand": "pnpm turbo run build --filter=@rentfusion/web",
  "installCommand": "pnpm install",
  "devCommand": "pnpm dev",
  "rootDirectory": "apps/web",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ],
  "headers": [
    {
      "source": "/api/:path*",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, OPTIONS" }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "crons": [
    {
      "path": "/api/cron/check-stale-properties",
      "schedule": "0 */6 * * *"
    }
  ]
}

